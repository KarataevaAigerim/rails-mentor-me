<div class="container">
  <div class="show-page">
    <div class="row flex">
      <div class="col">
        <div class="avatar-attributes">
          <div class="header-text">
            <h1><%= @mentor.user.first_name.capitalize %> <%= @mentor.user.last_name.capitalize %></h1>
          </div>
          <div class="avatar-box">
            <% if @mentor.user.photo.attached? %>
              <%= cl_image_tag @mentor.user.photo.key, class: "show-avatar" %>
            <% else %>
              <h3>Photo</h3>
              <p>No photo uploaded yet</p>
            <% end %>
          </div>
          <div class="mentor-attributes">
            <div class="header-text">
              <h3>Mentor Details</h3>
            </div>
            <p>Location: <%= @mentor.country %> </p>
            <p>Field: <%= @mentor.field %></p>
            <p>Price: $<%= @mentor.price_per_hour %></p>
            <p>Experience: <%= @mentor.experience %></p>
          </div>
        </div>
      </div>
      <div class="col-6">
        <div class="middle-column">
          <div class="mentor-info">
            <%= @mentor.bio %>
          </div>
          <div class="ratings text-left">
            <div class="header-text">
              <h4>Reviews</h4>
            </div>
            <em>No ones reviewed this mentor yet, book a session to be the first!</em>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="booking-form">
          <%= simple_form_for [@mentor, @booking], url: new_mentor_booking_path(@mentor), method: :post do |f| %>
            <%= f.input :start_time, as: :datetime, html5: true %>
            <%= f.input :end_time, as: :datetime, html5: true%>
            <%= f.input :description %>
            <%= f.button :submit, "Create Booking", class: "btn-booking" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
