<!DOCTYPE html>
<html>
  <head>
    <title>Mentor Me</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>
  <body>
    <% unless controller_name == "pages" %>
      <div class="navbar">
        <%= link_to root_path do %>
          <%= image_tag "MMlogo.png", class: "logo" %>
        <% end %>
        <%= link_to "Find a Mentor", mentors_path, class: "nav-link" %>
        <% if user_signed_in? && current_user.mentor %>
          <%= link_to "My Mentor Profile", edit_mentor_path((current_user.id)), class: "nav-link" %>
        <% end %>
        <% if user_signed_in? && current_user.mentor == false || user_signed_in? == false %>
          <%= link_to "Become a Mentor", edit_user_registration_path, class: "nav-link"%>
        <% end %>
        <% if user_signed_in? %>
          <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "nav-link" %>
          <% if current_user.photo.attached? %> %>
            <%= cl_image_tag current_user.photo.key, class: "avatar", alt: "avatar" %>
          <% end %>
        <% else %>
          <%= link_to "Log In/Signup", user_session_path, class: "nav-link" %>
        <% end %>
      </div>
    <% end %>
    <%= yield %>
    <!-- <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p> -->
  </body>
</html>
